BASE_LDFLAGS=@LDFLAGS@

ifeq ($(patsubst clang%,clang,$(patsubst cc,clang,$(CC))),clang)
	USING_CLANG = 1
endif

# -rdynamic gcc flag
ifeq ($(patsubst gcc%,gcc,$(CC)),gcc)
	R_DYNAMIC = -rdynamic
else ifeq ($(USING_CLANG),1)
	R_DYNAMIC = -Wl,--export-dynamic
else ifeq ($(CC),x86_64-w64-mingw32-gcc)
	#R_DYNAMIC = -export-all-symbols
endif

ifeq ($(WINDOWS),1)
	EXT = .exe
	#EXTRA_LD_FLAGS += -mwindows
	BASE_LDFLAGS += -fno-stack-protector \
										-lws2_32 -static \
										-static-libgcc \
										-static-libstdc++
	LIBEXT = .dll
else
#EXTRA_LD_FLAGS += -DGDK_DISABLE_DEPRECATED \
#									 -DGTK_DISABLE_DEPRECATED
	LIBEXT = .so
ifeq ($(LINUX),1)
  EXTRA_LD_FLAGS += -lrt
endif
endif
ifeq ($(PROFILING),1)
	BASE_LDFLAGS += -pg
endif

ifeq ($(LINUX),1)
	EXTRA_LD_FLAGS+= -lasound
endif

ifeq ($(WINDOWS),1)
	FPIC=-mms-bitfields
	MWINDOWS=-mwindows
else
	FPIC=-fPIC
endif

ifeq ($(OSX),1)
	OSX_LIBS += -lobjc -framework Foundation -framework Cocoa -framework AppKit
endif

ifeq ($(OSX),1)
	WARNING_FLAGS = -Wno-bad-function-cast \
		-Werror=uninitialized
else ifeq ($(USING_CLANG),1)
	WARNING_FLAGS = -Wno-bad-function-cast \
		-Werror=uninitialized
else
	WARNING_FLAGS = -Wno-cast-function-type \
		-Werror=maybe-uninitialized
endif

CFLAGS:=$(filter-out -fstack-protector-strong,$(CFLAGS))
CFLAGS:=$(filter-out -fstack-clash-protection,$(CFLAGS))
CFLAGS:=$(filter-out -D_FORTIFY_SOURCE=2,$(CFLAGS))
# others to consider
#-Werror=sometimes-uninitialized
#-Werror=header-guard
#-Werror=non-literal-null-conversion
#-Werror=pointer-type-mismatch
#-Werror=pointer-integer-compare
#-Werror=cast-function-type
#-Werror=unused-but-set-variable
#-Werror=parentheses
#-Werror=sign-compare
CFLAGS += -Wall \
	-Wextra \
	-Wno-missing-field-initializers \
	-Wno-unused-parameter \
	-Wno-sequence-point \
	-Wignored-qualifiers \
	-Werror=implicit-function-declaration \
	-Werror=uninitialized \
	-Werror=return-type \
	-Werror=int-conversion \
	-Werror=format-security \
	-Werror=incompatible-pointer-types \
	-Werror=implicit-int \
	$(WARNING_FLAGS) \
	$(DEFAULT_INCLUDES) \
	$(FFMPEG_CFLAGS) \
	$(GTK3_CFLAGS) \
	$(JACK_CFLAGS) \
	$(LIBYAML_CFLAGS) \
	$(FFTW3F_CFLAGS) \
	$(GTOP_CFLAGS) \
	$(LILV_CFLAGS) \
	$(LV2_CFLAGS) \
	$(PORT_AUDIO_CFLAGS) \
	$(SAMPLERATE_CFLAGS) \
	$(SNDFILE_CFLAGS) \
	$(X11_CFLAGS) \
	-DCONFIGURE_DATADIR=\"$(datadir)\" \
	-DCONFIGURE_LIBDIR=\"$(libdir)\" \
	$(FPIC) \
	$(MWINDOWS)

ifeq ($(PROFILING),1)
	CFLAGS += -pg
endif
ifeq ($(DEBUG),1)
	CFLAGS += -g
endif

ifneq ($(WINDOWS),1)
ifneq ($(OSX),1)
	LM=-lm
endif
endif

ifeq ($(FREEBSD),1)
	EXECINFO=-lexecinfo
endif

ifeq ($(WINDOWS),1)
