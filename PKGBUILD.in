pkgname=zrythm
pkgver=@BRANCH@
_pkgname="$pkgname-$pkgver"
pkgrel=1
pkgdesc="Free GNU/Linux music production system (DAW)"
arch=('x86_64')
url="https://www.zrythm.org"
license=('GPL')
depends=('gtk3' 'lv2' 'lilv' 'jack' 'libsndfile' 'libsmf' 'libdazzle'
         'breeze-icons' 'portaudio' 'ffmpeg')
source=(""$_pkgname".tar.gz"
        "libcyaml::https://github.com/tlsa/libcyaml/archive/v0.1.0.tar.gz")
md5sums=('SKIP'
         'SKIP')

prepare() {
	cd "$srcdir/$_pkgname"
  cp -r $srcdir/libcyaml-0.1.0/* ./ext/libcyaml/
}

build() {
  cd "$srcdir/$_pkgname"
  ./autogen.sh
  ./configure --prefix=/usr --enable-release --enable-package-mode
  make -j14
}

package() {
  cd "$srcdir/$_pkgname"
	make DESTDIR="$pkgdir/" install
}
